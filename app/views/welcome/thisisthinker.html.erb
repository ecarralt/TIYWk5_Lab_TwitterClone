

<% if false %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if notice %>
        <%= notice %>
      <% end %>
    </div>
  </div>
<% end %>



<div class="row">

  <div class="col-xs-6 col-xs-offset-3">

    <h3 class= "welcome_title">Welcome, share your thoughts with the world...</h3>

    <div class="sign_in_form">
      <%= form_tag ({:class => 'form-group'}) do %>

        <div class="row">
          <%= label_tag :username %>
          <%= text_field_tag :username,"",class: 'form-control'%>
        </div>

        <div class="row">
          <%= label_tag :password %>
          <%= password_field_tag :password,"",class: 'form-control'%>
        </div>

        <div class="row sign_in_buttons">
          <%= submit_tag "Sign In" %>
          or
          <%= link_to 'Sign Up', new_user_path %>
        </div>

      <% end %>

    </div>

  </div>
</div>
