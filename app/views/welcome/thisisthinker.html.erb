
<div class="row">

  <div class="col-xs-10 col-xs-offset-3">
    <h3>Happy you are ready to get your thoughts out!</h3>

    <h4>Sign-up:</h4>
  </div>

</div>

<div class="row">

  <div class="col-xs-10 col-xs-offset-3">


    <% if @user.errors.any? %>
      <div class="errors">
        <% @user.errors.full_messages.each do |msg| %>
          <p>
            <%= msg %>
          </p>
        <% end %>
      </div>
    <% end %>

    <%= form_for @user, url: create_user_path do |f| %>

      <div class="">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="">
        <%= f.label :last_name %>
        <%= f.text_field :last_name%>
      </div>
      <div class="">
        <%= f.label :username %>
        <%= f.text_field :username%>
      </div>
      <div class="">
        <%= f.label :password %>
        <%= f.password_field :password%>
      </div>

      <div class="">
      <%= f.submit "Submit"%>
      </div>

    <% end %>

  </div>
</div>
