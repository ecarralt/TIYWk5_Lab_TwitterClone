<!DOCTYPE html>
<html>
<head>
  <title>Thinker_byECT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="row menubar">

  <div class="col-xs-3 col-xs-offset-1">
    <div class="menulinks">
      <%= link_to home_path do%>
        <i class="glyphicon glyphicon-home"></i><inline> Home</inline>
      <% end %>
      <% if @current_user %>
        <%= link_to users_path do%>
          <i class="glyphicon glyphicon-link"></i><inline> All Thinkers</inline>
        <% end %>
        <%= link_to home_path do %>
          <i class="glyphicon glyphicon-leaf"></i><inline> New Thought</inline>
        <% end %>
      <% else end %>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="mainlogo">
      <% if @current_user %>
        <%= link_to home_path do %>
        <h3>
          <span class="glyphicon glyphicon-equalizer text-success" aria-hidden="true"></span>
        </h3>
        <% end %>
      <% else %>
        <%= link_to welcome_path do %>
        <h3>
          <span class="glyphicon glyphicon-equalizer text-success" aria-hidden="true"></span>
        </h3>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-2">
    <% if @current_user %>
    <div class="signout_link">
      <%= image_tag @current_user.photo_tag, size: "25x25"%>
      <%= link_to "Log out", sign_out_path %>
    </div>
    <% else %>
    <div class="">
    </div>

    <% end  %>
  </div>

</div>

<div class="row">
  <div class="col-xs-7 col-xs-offset-3">
    <% if notice %>
      <div class="alert alert-warning">  <%= notice %>  </p>
    <% end %>
    </div>

  </div>



</div>

<%= yield %>

<% if false %>
<div class="row">
  <div class="col-xs-2 col-xs-offset-10">

    <% if @current_user %>
          <p>
            signed in as @<%= @current_user.username %>
          </p>
    <% else %>
    <% end  %>

  </div>

</div>

<% end %>


</body>
</html>
